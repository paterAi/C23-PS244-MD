<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.signin.SignInFragment">

    <ImageView
        android:id="@+id/img_sign_in_decoration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img_des_sign_in_decoration"
        android:scaleType="fitEnd"
        android:src="@drawable/sign_in_decoration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_sign_in_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/img_des_logo_paterai" />

    <TextView
        android:id="@+id/tv_sign_in_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_sign_in_logo" />

    <TextView
        android:id="@+id/tv_sign_in_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/title_sign_in"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_sign_in_logo"
        app:layout_constraintStart_toStartOf="@+id/tv_sign_in_logo"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_in_logo" />

    <TextView
        android:id="@+id/tv_sign_in_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="@string/sign_in"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_sign_in_title"
        app:layout_constraintStart_toStartOf="@+id/tv_sign_in_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_in_title" />

    <Button
        android:id="@+id/btn_sign_in_google"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:padding="16dp"
        android:text="@string/btn_sign_in_google"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:cornerRadius="5dp"
        app:icon="@drawable/ic_google"
        app:iconPadding="16dp"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/tv_sign_in_content"
        app:layout_constraintStart_toStartOf="@+id/tv_sign_in_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_in_content"
        app:strokeColor="@color/grey"
        app:strokeWidth="1dp"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/btn_sign_in_facebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:padding="16dp"
        android:text="@string/btn_sign_in_fb"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:cornerRadius="5dp"
        app:icon="@drawable/ic_facebook"
        app:iconPadding="16dp"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/btn_sign_in_google"
        app:layout_constraintStart_toStartOf="@+id/btn_sign_in_google"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_in_google"
        app:strokeColor="@color/grey"
        app:strokeWidth="1dp"
        tools:ignore="VisualLintButtonSize" />
</androidx.constraintlayout.widget.ConstraintLayout>