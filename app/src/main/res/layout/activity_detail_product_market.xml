<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tertiary"
    tools:context=".ui.market.product.detail.DetailProductMarketActivity">

    <ImageView
        android:id="@+id/img_vegetable_detail"
        android:layout_width="0dp"
        android:layout_height="256dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_product_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_vegetable_detail" />

    <TextView
        android:id="@+id/tv_name_vegetable_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_vegetable_detail" />

    <Button
        android:id="@+id/btn_dec_vegetable_detail"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/tertiary"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="â€“"
        android:textColor="@color/black"
        app:cornerRadius="4dp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_vegetable_detail"
        app:layout_constraintEnd_toStartOf="@+id/tv_count_vegetable_detail"
        app:layout_constraintTop_toTopOf="@+id/tv_name_vegetable_detail"
        app:strokeColor="@color/grey"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/tv_count_vegetable_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/btn_dec_vegetable_detail"
        app:layout_constraintEnd_toStartOf="@+id/btn_inc_vegetable_detail"
        app:layout_constraintTop_toTopOf="@+id/btn_dec_vegetable_detail" />

    <Button
        android:id="@+id/btn_inc_vegetable_detail"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/primary"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:cornerRadius="4dp"
        app:icon="@drawable/ic_add_24"
        app:iconGravity="textTop"
        app:iconSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_count_vegetable_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_count_vegetable_detail" />

    <TextView
        android:id="@+id/tv_price_vegetable_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="TextView"
        android:textColor="@color/primary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_name_vegetable_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_vegetable_detail" />

    <TextView
        android:id="@+id/tv_des_vegetable_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="TextView"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_inc_vegetable_detail"
        app:layout_constraintStart_toStartOf="@+id/tv_price_vegetable_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_vegetable_detail" />

    <Button
        android:id="@+id/btn_addTo_cart_vegetable_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/montserrat_semi_bold"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Tambah ke keranjang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>